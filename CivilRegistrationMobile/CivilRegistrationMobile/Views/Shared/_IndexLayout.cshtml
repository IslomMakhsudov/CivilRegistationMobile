@{
    string leftColor = String.Empty;
    string rightColor = String.Empty;

    if (ViewBag.PageName == "Index")
    {
        leftColor = "color-green";
        rightColor = "color-gray";
    }
    else
    {
        leftColor = "color-gray";
        rightColor = "color-green";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&display=swap" rel="stylesheet">
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container content"> 
        <div>
            <div class="header">
                <div class="navigation-header">
                    <div class="image">
                        <a asp-action="Index" asp-controller="General" class="d-flex h-100">
                            <img src="~/images/left-arrow.png">
                        </a>
                    </div>
                    <p>Услуги Загса</p>
                    @if (ViewBag.PageName == "Index")
                    {
                        <div class="image_2-div">
                        </div>
                    }
                    else{
                        <a class="image_2" id="filter" href="myApplicationsFilter.html">
                            <img src="~/images/filter_icon.png">
                        </a>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col navigation-bar">
                    <a asp-action="IndexNavigation" asp-route-pageName="Index" asp-controller="General" class="width-height">
                        <div class="btn width-height">
                            <p class="nav-selected-1">
                                Новая заявка
                            </p>
                        </div>
                        <div class="col navigation-footer @leftColor"></div>
                    </a>
                </div>
                <div class="col navigation-bar">
                    <a asp-action="IndexNavigation" asp-route-pageName="MyApplications" asp-controller="General"  class="width-height">
                        <div class="btn width-height">
                            <p class="nav-selected-0">
                                Мои заявки
                            </p>
                        </div>
                        <div class="col navigation-footer @rightColor"></div>
                    </a>
                </div>
            </div>
            @RenderBody()
        </div>

        <div class="bot-content-d">
            <a asp-action="Support" asp-controller="General">
                <img src="~/images/operator.png">
            </a>
        </div>
    </div>
</body>
</html>
